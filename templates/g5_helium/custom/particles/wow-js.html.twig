{% extends '@nucleus/partials/particle.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ url('gantry-theme://css/animate.min.css') }}" type="text/css"/>
{% endblock %}

{% block javascript_footer %}
	{% if particle.enabled %}
		{{ parent() }}
		<script src="{{ url('gantry-theme://js/wow.min.js') }}" type="text/javascript"></script>
		<script type="text/javascript">
			wow = new WOW({ mobile: {{ particle.mobile|default("false")|e }}, offset: {{ particle.offset|default("200")|e }} });
			wow.init();
		</script>
	{% endif %}
{% endblock %}